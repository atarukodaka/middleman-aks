title: Archives
date: 2015-03-16
group: navigation
pageable: true
per_page: 100
---

<% articles ||= page_articles || [] %>

<% articles.group_by {|a| a.date.year }.each do |year, year_articles| %>
<h2><%= link_to(year, blog_year_path(year)) %></h2>
<% year_articles.group_by {|a| a.date.month }.each do |month, month_articles| %>
<h3><%= link_to(Date.new(year, month, 1).strftime("%b"), blog_month_path(year, month)) %></h3>
<ul>
  <% month_articles.each do |article| %>
  <li><%= link_to_page(article) %></li>
  <% end %>
</ul>
<% end %>
<% end %>

<% if paginate %>
<%= partial("partials/pagination") %>
<% end %>

