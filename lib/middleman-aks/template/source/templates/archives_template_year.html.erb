---
numbering_headings: false
---

<% pages ||= [] %>

<% content_for(:title) { "Archives for #{year}" } %>

<% pages.group_by {|page| page.date.month }.each do |month, month_pages| %>
<h3><%= link_to_archives(Date.new(year, month, 1).strftime("%b"), :month, year, month) %></h3>
<ul>
  <% month_pages.each do |page| %>
  <li><%= link_to_page(page) %></li>
  <% end %>
</ul>
<% end %>
