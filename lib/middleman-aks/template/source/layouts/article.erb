<% wrap_layout :layout do %>

<article>
  <header>
    <%= breadcrumbs(current_page) %>
    <h1><%= h(page_title(current_page)) %></h1>
    <section class="page_info">
      | 
      <%= breadcrumbs(current_page, bootstrap_style: false) %>
      |
      <%= current_page.date.strftime("%d %b %Y") %> 
      |
      <%= link_to("permlink", current_page) %> 
      |
      <!-- %= page_info(current_article) % -->
    </section>

    <!-- %= render_toc(current_page, use_collapsing: false ) % -->

  </header>

  <section class="content numbering_headings">
    <%= yield %>
  </section>

  <footer>
    <div>
      Posted by <%= h(data.config.site_info.author) %> 
      <!-- % if category = current_article.category % -->
      
      <!-- % end % -->
      at <%= current_page.date.strftime("%d %b %Y") %> 
      on <%= link_to("this permlink", current_page) %>.
    </div>
    <div class="share_sns">
      <!-- %= [share_twitter(data.config.site_info.twitter), share_hatena_bookmark(current_article)].join(" ") % -->
    </div>
    <!-- pager -->
    <nav>
      <ul class="pager">
	<!-- %= article_pager(:previous, current_article.previous_article) % -->
	<!-- %= article_pager(:next, current_article.next_article) % -->
      </ul>
    </nav>

    <% if extensions.has_key?(:disqus) %>
      <%= disqus %>
      <%= disqus_count %>
    <% end %>

  </footer>
</article>

<% end %>

